@page "/termin-erstellen"
@rendermode InteractiveServer

<div class="app-frame">
    <div class="home-container">
        <h2 class="greeting">Termin erstellen</h2>

        <div class="form-group">
            <label for="titel">Titel</label>
            <input id="titel" type="text" class="input-field" @bind="titel" placeholder="Geben Sie einen Titel ein" />
        </div>

        <div class="form-group">
            <label for="datum">Datum</label>
            <input id="datum" type="date" class="input-field" @bind="datum" />
        </div>

        <div class="form-group">
            <label for="uhrzeit">Uhrzeit</label>
            <input id="uhrzeit" type="time" class="input-field" @bind="uhrzeit" />
        </div>

        <div class="form-group">
            <label for="notiz">Notiz</label>
            <textarea id="notiz" class="input-field" @bind="notiz" placeholder="Geben Sie Ihre Notizen ein"></textarea>
        </div>

        <button class="next-btn" @onclick="Speichern">Termin speichern</button>
        <button class="delete-btn" @onclick="Loeschen">Termin lÃ¶schen</button>
    </div>
</div>